// Prisma schema for Hyppado user features
// Run: npx prisma generate && npx prisma db push

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String       @id @default(cuid())
  email       String       @unique
  name        String?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  
  savedItems  SavedItem[]
  collections Collection[]
  notes       Note[]
  alerts      Alert[]
}

model SavedItem {
  id         String   @id @default(cuid())
  userId     String
  type       String   // 'video' | 'product'
  externalId String   // ID from Kalodata
  title      String
  metaJson   Json?    // Additional metadata (thumbnail, creator, etc.)
  createdAt  DateTime @default(now())
  
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([userId, type, externalId])
  @@index([userId, type])
}

model Collection {
  id        String           @id @default(cuid())
  userId    String
  name      String
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt
  
  user      User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  items     CollectionItem[]
  
  @@index([userId])
}

model CollectionItem {
  id           String     @id @default(cuid())
  collectionId String
  type         String     // 'video' | 'product'
  externalId   String
  title        String
  metaJson     Json?
  createdAt    DateTime   @default(now())
  
  collection   Collection @relation(fields: [collectionId], references: [id], onDelete: Cascade)
  
  @@unique([collectionId, type, externalId])
  @@index([collectionId])
}

model Note {
  id         String   @id @default(cuid())
  userId     String
  type       String   // 'video' | 'product' | 'creator'
  externalId String
  content    String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId, type, externalId])
}

model Alert {
  id          String   @id @default(cuid())
  userId      String
  title       String
  description String?
  severity    String   @default("info") // 'info' | 'warning' | 'success'
  type        String   // 'new_product' | 'creator_rise' | 'high_roas' | 'trend'
  payloadJson Json?    // Related data (productId, creatorId, etc.)
  read        Boolean  @default(false)
  createdAt   DateTime @default(now())
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId, read])
}
